{
  "name": "Express-Server-Api",
  "version": "1.0.0",
  "description": "Express-Server-Api",
  "main": "index.ts",
  "scripts": {
    "ts:check": "tsc --noEmit",
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "rimraf build && tsc",
    "start": "NODE_ENV=production npm run build && tsx build/src/index.js",
    "lint": "eslint --fix --ext .ts,.js src/ tests/",
    "format": "prettier --write 'src/**/*.{ts,js,json}' 'tests/**/*.{ts,js,json}'",
    "test": "jest",
    "prepare": "husky install",
    "docker:build": "docker-compose build --no-cache",
    "docker:start": "docker-compose up",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "@prisma/client": "^5.9.1",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/config": "^3.3.3",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^20.11.20",
    "@types/nodemailer": "^6.4.14",
    "@types/pino": "^7.0.5",
    "apollo-server-express": "^3.13.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "openapi3-ts": "^4.2.2",
    "pino-http": "^9.0.0",
    "prisma": "^5.9.1",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@apollo/explorer": "^3.6.0",
    "@googleapis/docs": "^3.0.0",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.11",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "googleapis": "^133.0.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "nanoid": "^5.0.6",
    "nodemailer": "^6.9.9",
    "nodemon": "^3.0.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "use-deep-compare-effect": "^1.8.1"
  },
  "lint-staged": {
    "**/*.{ts,js,json}": [
      "npm run lint",
      "npm run format"
    ],
    "src/**/*.{ts,js,json}": "npm run format",
    "tests/**/*.{ts,js,json}": "npm run format"
  },
  "author": "Hamjeth Misree",
  "repository": "hamjeth/Express-Server-Api"
}
